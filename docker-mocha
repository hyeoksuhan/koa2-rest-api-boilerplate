FROM node:8.1.4

LABEL maintainer="hyeoksu.han@gmail.com"

ARG API_PATH=/usr/app/api

# create and user workdir
RUN mkdir -p $API_PATH
WORKDIR $API_PATH

# install dependencies
COPY ./package.json $API_PATH
RUN npm install

# copy files
COPY ./ $API_PATH

# run test
CMD ["npm", "run", "test-docker"]